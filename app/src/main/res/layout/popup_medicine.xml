<?xml version="1.0" encoding="utf-8"?>

      <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup"
        android:layout_width="375dp"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medicine Name:"
            android:textSize="20sp"
            android:id="@+id/textView_MedicineName"
            android:layout_marginTop="77dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="34dp"
            android:layout_marginStart="34dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_medicineName"
        android:layout_alignTop="@+id/textView_MedicineName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/textView_MedicineName"
        android:layout_toEndOf="@+id/textView_MedicineName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reasons:"
        android:textSize="20dp"
        android:id="@+id/textView_reason"
        android:layout_below="@+id/editText_medicineName"
        android:layout_alignLeft="@+id/textView_MedicineName"
        android:layout_alignStart="@+id/textView_MedicineName"
        android:layout_marginTop="39dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_reasons"
        android:layout_alignBottom="@+id/textView_reason"
        android:layout_toRightOf="@+id/textView_MedicineName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time:"
        android:textSize="20sp"
        android:id="@+id/textView_time"
        android:layout_below="@+id/textView_reason"
        android:layout_alignLeft="@+id/textView_reason"
        android:layout_alignStart="@+id/textView_reason"
        android:layout_marginTop="39dp" />

    <EditText
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText_time"
        android:layout_alignBottom="@+id/textView_time"
        android:layout_toRightOf="@+id/textView_MedicineName"
        android:layout_toLeftOf="@+id/button_timePick"
        android:layout_toStartOf="@+id/button_timePick" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Medicine"
        android:id="@+id/saveMedicine_button"
        android:layout_below="@+id/editText_time"
        android:layout_marginTop="71dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/editText_reasons"
        android:layout_alignStart="@+id/editText_reasons" />

    <ImageButton
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/button_timePick"
        android:onClick="showTimePickerDialog"
        android:src="@drawable/time_icon"
        android:layout_above="@+id/saveMedicine_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <CheckedTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Notification"
        android:textSize="20sp"
        android:checked="true"
        android:id="@+id/checkedTextView"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/textView_time"
        android:layout_alignStart="@+id/textView_time" />


</RelativeLayout>

