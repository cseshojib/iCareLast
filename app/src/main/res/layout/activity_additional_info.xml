<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Activity.AdditionalInfoActivity"
    android:background="#ff000000">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Additional Health Info"
        android:textColor="#ffffffff"
        android:textSize="30sp"
        android:id="@+id/textView_addHealthinfo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Height               :"
        android:id="@+id/textView_height"
        android:textSize="20sp"
        android:textColor="#ffffffff"
        android:layout_below="@+id/textView_addHealthinfo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText_height"
        android:textColor="#ffffffff"
        android:layout_alignBottom="@+id/textView_height"
        android:layout_alignRight="@+id/textView_addHealthinfo"
        android:layout_alignEnd="@+id/textView_addHealthinfo"
        android:layout_toRightOf="@+id/textView_weight"
        android:layout_toEndOf="@+id/textView_weight" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weight               :"
        android:textSize="20sp"
        android:id="@+id/textView_weight"
        android:textColor="#ffffffff"
        android:layout_alignBottom="@+id/editText_weight"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_weight"
        android:textColor="#ffffffff"
        android:layout_below="@+id/editText_height"
        android:layout_alignRight="@+id/editText_height"
        android:layout_alignEnd="@+id/editText_height"
        android:layout_toRightOf="@+id/textView_weight"
        android:layout_toEndOf="@+id/textView_weight" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blood Pressure:"
        android:textSize="20sp"
        android:textColor="#ffffffff"
        android:id="@+id/textView_bloodPressure"
        android:layout_alignBottom="@+id/editText_BP"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_BP"
        android:textColor="#ffffffff"
        android:layout_below="@+id/textView_weight"
        android:layout_toRightOf="@+id/textView_bloodPressure"
        android:layout_alignRight="@+id/editText_weight"
        android:layout_alignEnd="@+id/editText_weight" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Extra Issue       :"
        android:textColor="#ffffffff"
        android:textSize="20sp"
        android:id="@+id/textView_extraIssue"
        android:layout_alignBottom="@+id/editText_Ex"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_Ex"
        android:textColor="#ffffffff"
        android:layout_below="@+id/editText_BP"
        android:layout_alignRight="@+id/editText_BP"
        android:layout_alignEnd="@+id/editText_BP"
        android:layout_toRightOf="@+id/textView_bloodPressure"
        android:layout_toEndOf="@+id/textView_bloodPressure" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:textSize="25sp"
        android:id="@+id/add_health_info_button"
        android:layout_below="@+id/textView_extraIssue"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="97dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
