<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"

        android:background="#ff000000"
        tools:context=".DisplayContact">
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Name           : "
            android:id="@+id/textView_Name"


            android:textColor="#ffffffff"
            android:layout_toLeftOf="@+id/editText_name"
            android:layout_toStartOf="@+id/editText_name" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:id="@+id/editText_name"
            android:hint="Type your name"
            android:textSize="15sp"

            android:textColor="#feeaeaea"
            android:textColorHint="#ffffffff"
          />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Age               : "
            android:hint="Enter your age"
            android:id="@+id/textView_age"
            android:textColor="#ffffffff"
           />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:id="@+id/editText_age"
            android:textSize="15sp"
            android:hint="Enter your age"
            android:inputType="number"
            android:textColor="#ffffffff"
            android:textColorHint="#ffffffff"
            />
       </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Blood Group: "
            android:id="@+id/textView_bloodgp"
            android:textColor="#ffffffff"
          />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/editText_bloodgp"
        android:hint="Choose blood group"
        android:textColor="#ffffffff"
        android:textSize="15sp"
        android:textColorHint="#ffffffff"
        />
</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Gender         : "
            android:id="@+id/textView_genden"
            android:textColor="#ffffffff"
            />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/editText_gender"
        android:hint="Choose your gender"
        android:textColor="#ffffffff"
        android:textSize="15sp"
        android:textColorHint="#ffffffff"
         />


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Height          : "
            android:id="@+id/textView_height"
            android:textColor="#ffffffff"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:id="@+id/editText_height"
            android:hint="Choose your Height"
            android:textColor="#ffffffff"
            android:textSize="15sp"
            android:textColorHint="#ffffffff"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Weight         : "
            android:id="@+id/textView_weight"
            android:textColor="#ffffffff"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:id="@+id/editText_weight"
            android:hint="Choose your weight"
            android:textColor="#ffffffff"
            android:textSize="15sp"
            android:textColorHint="#ffffffff"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Blood Pressure: "
            android:id="@+id/textView_bloodPressure"
            android:textColor="#ffffffff"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:id="@+id/editText_bloodPressure"
            android:hint="Choose your bloodPressure"
            android:textColor="#ffffffff"
            android:textSize="15sp"
            android:textColorHint="#ffffffff"
            />



    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Disease       : "
            android:id="@+id/textView_disease"
            android:textColor="#ffffffff"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:id="@+id/editText_disease"
            android:hint="Choose your disease"
            android:textColor="#ffffffff"
            android:textSize="15sp"
            android:textColorHint="#ffffffff"
            />


    </LinearLayout>


    <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textAppearance="?android:attr/textAppearanceLarge"-->
            <!--android:text="CREATE PROFILE"-->
            <!--android:id="@+id/textView10"-->
       <!-- -->
            <!--android:textColor="#ffffffff" />-->








        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Save"
            android:textSize="20sp"
            android:id="@+id/button_save"

            android:layout_marginTop="75dp" />



        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="20sp"
            android:text="Your Health Services"
            android:id="@+id/button_add_Addi_healthinfo"

            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
</LinearLayout>
    </ScrollView>




