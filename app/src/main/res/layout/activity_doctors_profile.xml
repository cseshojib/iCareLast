<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Activity.DoctorsProfileActivity"
    android:background="#fff2fffc">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Doctors"
        android:textSize="30sp"
        android:id="@+id/textView_add"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/abc_primary_text_material_light" />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="240dp"
        android:paddingTop="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView_add"
        android:id="@+id/tableLayout">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"

                android:layout_column="0">



                </TableRow>

            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Doctors Name"
                android:textSize="25sp"
                android:id="@+id/textViewName"
                android:layout_column="1" />

            <EditText
                android:layout_width="match_parent"
               android:layout_height="wrap_content"
                android:hint="Doctors Name"
                android:textSize="10sp"
                android:id="@+id/doctorNameEditText"
                android:layout_column="2" />


        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Specialty:"
                android:textSize="20sp"
                android:id="@+id/textView"
                android:layout_column="1" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dr_specialtySpinner1"
                android:layout_column="2"
                android:clickable="true"
                android:focusable="true" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:textSize="20sp"
                android:id="@+id/textViewPhone"
                android:layout_column="1" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:hint="Phone Number"
                android:textSize="10sp"
                android:ems="10"
                android:id="@+id/dr_phoneEditText"
                android:layout_column="2" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textSize="20sp"
                android:id="@+id/textView4"
                android:layout_column="1" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dr_AddressEditText"
                android:hint="Doctor's address"
                android:textSize="10sp"
                android:layout_column="2" />
        </TableRow>




    </TableLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Doctors Info"
        android:textSize="20sp"
        android:onClick="drInfoSave"
        android:id="@+id/saveDoctorButton"
        android:layout_marginBottom="86dp"
        android:background="#ff97ffb3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />




</RelativeLayout>
