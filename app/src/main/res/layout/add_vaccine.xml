<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/popup"
    android:layout_width="375dp"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vaccine Name:"
        android:textSize="20sp"
        android:id="@+id/textView_VaccineName"
        android:layout_marginTop="77dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_VaccineName"
        android:layout_alignTop="@+id/textView_VaccineName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/textView_VaccineName"
        android:layout_toEndOf="@+id/textView_VaccineName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reasons:"
        android:textSize="20dp"
        android:id="@+id/textView_reason"
        android:layout_below="@+id/editText_VaccineName"
        android:layout_alignLeft="@+id/textView_VaccineName"
        android:layout_alignStart="@+id/textView_VaccineName"
        android:layout_marginTop="39dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_reasons"
        android:layout_alignBottom="@+id/textView_reason"
        android:layout_toRightOf="@+id/textView_VaccineName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date:"
        android:textSize="20sp"
        android:id="@+id/textView_date"
        android:layout_below="@+id/textView_reason"
        android:layout_alignLeft="@+id/textView_reason"
        android:layout_alignStart="@+id/textView_reason"
        android:layout_marginTop="39dp" />

    <EditText
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText_date"
        android:layout_alignBottom="@+id/textView_date"
        android:layout_toRightOf="@+id/textView_VaccineName"
        android:layout_toLeftOf="@+id/button_datePick"
        android:layout_toStartOf="@+id/button_datePick" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Vaccine"
        android:id="@+id/saveVaccine_button"
        android:layout_below="@+id/editText_date"
        android:layout_marginTop="71dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/editText_reasons"
        android:layout_alignStart="@+id/editText_reasons" />

    <ImageButton
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/button_datePick"
        android:onClick="showDatePickerDialog"
        android:src="@drawable/calendar_icon"
        android:layout_above="@+id/saveVaccine_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <CheckedTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Notification"
        android:textSize="20sp"
        android:checked="true"
        android:id="@+id/checkedTextView"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/textView_date"
        android:layout_alignStart="@+id/textView_date" />


</RelativeLayout>
