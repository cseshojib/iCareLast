<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.shojib.project_moon.Medication.Medicine.addMedicine">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medicine Name:"
        android:textSize="20sp"
        android:id="@+id/textView_MedicineName"
        android:layout_marginTop="77dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_medicineName"
        android:layout_alignTop="@+id/textView_MedicineName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/textView_MedicineName"
        android:layout_toEndOf="@+id/textView_MedicineName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reasons            :"
        android:textSize="20dp"
        android:id="@+id/textView_reason"
        android:layout_below="@+id/editText_medicineName"
        android:layout_alignLeft="@+id/textView_MedicineName"
        android:layout_alignStart="@+id/textView_MedicineName"
        android:layout_marginTop="39dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_reasons"
        android:layout_alignBottom="@+id/textView_reason"
        android:layout_toRightOf="@+id/textView_MedicineName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reminder Time:"
        android:textSize="20sp"
        android:id="@+id/textView_time"
        android:layout_below="@+id/textView_reason"
        android:layout_alignLeft="@+id/textView_reason"
        android:layout_alignStart="@+id/textView_reason"
        android:layout_marginTop="39dp" />

    <EditText
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText_time"
        android:layout_alignBottom="@+id/textView_time"
        android:layout_toRightOf="@+id/textView_MedicineName"
        android:layout_toLeftOf="@+id/button_timePick"
        android:layout_toStartOf="@+id/button_timePick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Medicine"
        android:id="@+id/saveMedicine_button"
        android:layout_below="@+id/checkBox"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="49dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/button_timePick"
        android:src="@drawable/time_icon"
        android:layout_alignBottom="@+id/editText_time"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Notification"
        android:id="@+id/checkBox"
        android:checked="false"
        android:layout_below="@+id/editText_time"
        android:layout_alignLeft="@+id/editText_time"
        android:layout_alignStart="@+id/editText_time"
        android:layout_marginTop="47dp" />



</RelativeLayout>
